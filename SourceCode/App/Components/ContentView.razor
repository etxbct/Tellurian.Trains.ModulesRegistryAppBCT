@inject IContentService ContentService
@inject IStringLocalizer<App> Localizer

@if (Content is null)
{
    @Localizer["Getting content. Please wait..."]
}
else
{
    @((MarkupString)Content.AsHtml)
}
@code {
    [Parameter] public string? ContentName { get; set; }
    [Parameter] public string? Language { get; set; } = null;

    TextContent? Content;

    protected async override Task OnParametersSetAsync()
    {
        if (ContentName is null) Content = TextContent.Empty;
        else Content = await ContentService.GetTextContent(ContentName, Language);
    }
}
